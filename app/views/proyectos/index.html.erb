<p id="notice"><%= notice %></p>
      
      <h1>Proyectos</h1>

      <table id='myTable' class='table'>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Descripcion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @proyectos.each do |proyecto| %>
            <tr>
              <td><%= proyecto.nombre %></td>
              <td><%= proyecto.imagen %></td>
              <td><%= proyecto.description %></td>
              <td><%= link_to 'Mostrar', proyecto %></td>
              <td><%= link_to 'Editar', edit_proyecto_path(proyecto) %></td>
              <td><%= link_to 'Eliminar', proyecto, method: :delete, data: { confirm: 'EstÃ¡s segura?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

