                  <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded" href="/#contact">Contacto</a></li>
                  <% if signed_in? %>
                    <li class="nav-item mx-0 mx-lg-1">
                      <a href="/proyectos"
                        class="nav-link py-3 px-0 px-lg.3 rounded">
                        Proyectos
