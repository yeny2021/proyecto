<div class="container">
  <div class="row">
    <div class="col">
      <p id="notice"><%= notice %></p>

      <h1>Proyectos Varios</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Imagen</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @proys.each do |proy| %>
            <tr>
              <td><%= proy.nombre %></td>
              <td><%= proy.imagen %></td>
              <td><%= link_to 'Show', proy, class: "btn btn-primary" %></td>
              <td><%= link_to 'Edit', edit_proy_path(proy),class: "btn btn-secondary" %></td>
              <td><%= link_to 'Destroy', proy, 
              method: :delete, 
              data: { confirm: 'Are you sure?' },
              class: "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Proy', 
      new_proy_path, 
      class: "btn btn-primary mb-4" %>
    </div>
   </div>
</div>