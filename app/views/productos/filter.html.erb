<div class="container">
  <div class="row">
    <% @productos.each_with_index do |t| %>
      <div class="col-3">
        <div class="card mt-4">
          <img src="<%= t.imagen %>" class="card-img-top" alt="<%= t.nombre %>">
          <div class="card-body">
            <h5 class="card-title"><%= t.nombre %></h5>
            <p class="card-text"><%= t.descripcion %></p>
            <a href="/productos/<%= t.id %>/comprar" class="btn btn-primary">Comprar</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>