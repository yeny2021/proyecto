<p id="notice"><%= notice %></p>

<h1>Orden Productos</h1>

<table>
  <thead>
    <tr>
      <th>Orden</th>
      <th>Prodcuto</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Instrucciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orden_productos.each do |orden_producto| %>
      <tr>
        <td><%= orden_producto.orden_id %></td>
        <td><%= orden_producto.prodcuto_id %></td>
        <td><%= orden_producto.cantidad %></td>
        <td><%= orden_producto.precio %></td>
        <td><%= orden_producto.instrucciones %></td>
        <td><%= link_to 'Show', orden_producto %></td>
        <td><%= link_to 'Edit', edit_orden_producto_path(orden_producto) %></td>
        <td><%= link_to 'Destroy', orden_producto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

